{
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "readme",
  "git.enableSmartCommit": true,

  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.inlineSuggest.enabled": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.stickyScroll.enabled": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,

  "editor.formatOnSave": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[nix]": {
    "editor.defaultFormatter": "B4dM4n.nixpkgs-fmt"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "typescript.preferences.importModuleSpecifier": "non-relative",

  "vim.easymotion": true,
  "vim.foldfix": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.smartRelativeLine": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(230, 97, 89, 0.7)",
  "vim.highlightedyank.textColor": "white",
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.wordHighlight.next"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["g", "e"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["q", "f"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<C-d>"],
      "after": ["1", "5", "g", "j", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["1", "5", "g", "k", "z", "z"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    }
  ],
  "vim.handleKeys": {
    "<C-n>": false,
    "<C-a>": false,
    "<C-w>": false,
    "<C-c>": false
  },

  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false
  },
  "terminal.integrated.profiles.osx": {
    "tmux-shell": {
      "path": "tmux",
      "args": ["new-session", "-A", "-s", "vscode:${workspaceFolder}"]
    }
  },
  "terminal.integrated.profiles.linux": {
    "tmux-shell": {
      "path": "tmux",
      "args": ["new-session", "-A", "-s", "vscode:${workspaceFolder}"]
    }
  },
  "terminal.integrated.defaultProfile.osx": "tmux-shell",
  "terminal.integrated.defaultProfile.linux": "tmux-shell",

  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.emptyWindow": false,
  "security.workspace.trust.enabled": false
}
